[Unit]
Description=NBA Betting API (FastAPI)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/nbamodels
Environment="PATH=/root/nbamodels/.venv/bin"
ExecStart=/root/nbamodels/.venv/bin/uvicorn api.dashboard_api:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
